  pod 'BVLinearGradient', :path => '../node_modules/react-native-linear-gradient'

  pod 'TextToSpeech', :path => '../node_modules/react-native-tts'

  target 'rnvrTests' do
    inherit! :search_paths
    # Pods for testing
  end

end

